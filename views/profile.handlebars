{{> privateNavBar }}

<main>
    <div class="uk-margin uk-width-large uk-margin-auto uk-card uk-card-default uk-card-body uk-box-shadow-large">
        <h1>Your Profile</h1>
        <form id="signup-form">
            <div class="uk-margin">
                <div class="uk-inline uk-width-1-1">
                    <span class="uk-form-icon" uk-icon="icon: user"></span>
                    <input class="uk-input uk-form-large" type="text" id="firstName" placeholder={{userDetails.firstName}}>
                </div>
            </div>
            <div class="uk-margin">
                <div class="uk-inline uk-width-1-1">
                    <span class="uk-form-icon" uk-icon="icon: user"></span>
                    <input class="uk-input uk-form-large" type="text" id="lastName" placeholder={{userDetails.lastName}}>
                </div>
            </div>
            <div class="uk-margin">
                <div class="uk-inline uk-width-1-1">
                    <span class="uk-form-icon" uk-icon="icon: mail"></span>
                    <input class="uk-input uk-form-large" type="text" id="email" placeholder={{userDetails.email}}>
                </div>
            </div>
            <div class="uk-margin">
                <div class="uk-inline uk-width-1-1">
                    <span class="uk-form-icon" uk-icon="icon: location"></span>
                    <input class="uk-input uk-form-large" type="text" id="location" placeholder={{userDetails.location}}>	
                </div>
            </div>
            <div class="uk-margin">
                <div class="uk-inline uk-width-1-1">
                    <span class="uk-form-icon" uk-icon="icon: linkedin"></span>
                    <input class="uk-input uk-form-large" type="text" id="socialMedia" placeholder={{userDetails.socialMedia}}>	
                </div>
            </div>
            <div class="uk-margin">
                <div class="uk-inline uk-width-1-1">
                    <span class="uk-form-icon" uk-icon="icon: calendar"></span>
                    <input class="uk-input uk-form-large" type="text" id="calendlyLink" placeholder={{userDetails.calendlyLink}}>	
                </div>
            </div>
            <div class="uk-margin">
                <div class="uk-inline uk-width-1-1">
                    <span class="uk-form-icon" uk-icon="icon: tag"></span>
                    <input class="uk-input uk-form-large" type="text" id="calendlyLink" placeholder={{userDetails.priceId}}>	
                </div>
            </div>
            <div id="signup-error"></div>
            <div class="uk-margin">
                <button class="uk-button uk-button-primary uk-button-large uk-width-1-1" type="submit">Save Changes</button>
            </div>
        </form>
    </div>

</main>