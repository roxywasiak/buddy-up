{{> privateNavBar }}





<div
    class="uk-section uk-section-muted uk-flex uk-flex-middle uk-animation-fade"
    uk-height-viewport
  >
    <div class="uk-width-1-1">
      <div class="uk-container">
        <div class="uk-grid-margin uk-grid uk-grid-stack" uk-grid>
          <div class="uk-width-1-1@m">
            <div
              class="uk-margin uk-width-large uk-margin-auto uk-card uk-card-default uk-card-body uk-box-shadow-large"
            >
            <h2 style="text-align: center;">Messages</h2>
        {{#each allMessageContent}}

            {{#if (isEqualTo user.userType student)}}
                {{#if (isEqualTo studentSenderId user.id)}}
                    <h3 style="text-align: right;">{{messageContent}}</h3>
                {{else}}
                    <h3 class=".uk-text-left">{{messageContent}}</h3>
                {{/if}}
            {{else}}
                {{#if (isEqualTo allMessageContent.tutorSenderId user.id)}}
                    <h3 class=".uk-text-right">{{messageContent}}</h3>
                {{else}}
                    <h3 class=".uk-text-left">{{messageContent}}</h3>
                {{/if}}
            {{/if}}
        {{/each}}

<form id="sendMessageForm">
    <div class="uk-margin">
        <input class="uk-input" type="text" id="messageInput" placeholder="Type Message">
    </div>
    <button class="uk-button uk-button-primary">Send Message</button>
</form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>