<div class="entry">
  {{#if (isEqualTo parent.userType "student")}}
    <div id="student-card" class="uk-margin">
      <div class="uk-card uk-card-default uk-width-1-2@m">
        <div class="uk-card-header">
          <div class="uk-grid-small uk-flex-middle" uk-grid>
            <div class="uk-width-auto">
            </div>
            <div class="uk-width-expand">
              <button
                class="uk-button uk-button-primary uk-button-small"
                style="border-radius: 10px"
                id="messagesBtn"
                data-id={{id}}
              >Messages</button>
              <h3 class="uk-card-title uk-margin-remove-bottom">
                Me
              </h3>
            </div>
          </div>
        </div>
        <div class="uk-card-body">
          <p>
            {{ad.description}}
          </p>
          <p>
            {{ad.subject.subjectName}}
          </p>
        </div>
        <div class="uk-card-footer">
          {{#if (isEqualTo status "pending")}}
            <div
              class="uk-button uk-button-primary"
              data-response={{id}}
            >pending</div>
          {{/if}}
          {{#if (isEqualTo status "completed")}}
            <div class="uk-button uk-button-primary">Completed</div>
          {{/if}}
          {{#if (isEqualTo status "rejected")}}
            <div class="uk-button uk-button-danger">Rejected</div>
          {{/if}}
        </div>
      </div>
    </div>
  {{/if}}
  {{#if (isEqualTo parent.userType "tutor")}}
    <div id="student-card" class="uk-margin">
      <div class="uk-card uk-card-default uk-width-1-2@m">
        <div class="uk-card-header">
          <div class="uk-grid-small uk-flex-middle" uk-grid>
            <div class="uk-width-auto">
            </div>
            <div class="uk-width-expand">
              <h3 class="uk-card-title uk-margin-remove-bottom">
                {{student.firstName}}
                {{student.lastName}}
                - student
              </h3>
              <a
                href={{student.email}}
                class="uk-icon-button uk-margin-small-right"
                uk-icon="mail"
              ></a>
              <button
                class="uk-button uk-button-primary uk-button-small"
                style="border-radius: 10px"
                id="messagesBtn"
                data-id={{id}}
              >Messages</button>
            </div>
          </div>
        </div>
        <div class="uk-card-body">
          <p>
            {{description}}
          </p>
          <p>
            {{subject.subjectName}}
          </p>
        </div>
        <div class="uk-card-footer">
        </div>
      </div>
    </div>
  {{/if}}
</div>