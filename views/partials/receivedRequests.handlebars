<div id="student-card" class="uk-margin">
  <div class="uk-card uk-card-default uk-width-1-2@m">
    <div class="uk-card-header">
      <div class="uk-grid-small uk-flex-middle" uk-grid>
        <div class="uk-width-auto">
        </div>
        <div class="uk-width-expand">
          <h3 class="uk-card-title uk-margin-remove-bottom">
            {{#if tutor}}
            {{tutor.firstName}}
            {{tutor.lastName}}
            - Tutor
            {{else}}
            {{student.firstName}}
            {{student.lastName}}
            - Buddy
            {{/if}}
          </h3>
          <a href={{#if tutor}} {{tutor.email}} {{else}} {{student.email}} {{/if}}
            class="uk-icon-button uk-margin-small-right" uk-icon="mail"></a>
          <a href={{#if tutor}} {{tutor.calendlyLink}} {{/if}} class="uk-icon-button uk-margin-small-right"
            uk-icon="calendar"></a>
        </div>
      </div>
    </div>
    <div class="uk-card-body">
      <div class="uk-card-body">
        <p class="uk-text-small">{{ad.description}}</p>
      </div>
      <div class="uk-card-body">
        <p class="uk-text-small">{{ad.subject.subjectName}}</p>
      </div>
    </div>
    <div class="uk-card-footer">
      {{#if (isEqualTo status "pending")}}
      <button class="uk-button uk-button-primary" id="acceptButton" data-response={{id}}>Accept</button>
      <button class="uk-button uk-button-danger" id="rejectButton" data-response={{id}}>Reject</button>
      {{/if}}
      {{#if (isEqualTo status "completed")}}
      <div class="uk-button uk-button-primary">Completed</div>
      {{/if}}
      {{#if (isEqualTo status "rejected")}}
      <div class="uk-button uk-button-danger">Rejected</div>
      {{/if}}
    </div>
  </div>
</div>