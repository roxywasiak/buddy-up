{{> privateNavBar }}

    <main>
      <div
        class="uk-section uk-section-muted uk-flex uk-flex-middle uk-animation-fade"
        uk-height-viewport
      >
        <div class="uk-width-1-1">
          <div class="uk-container">
            <div class="uk-grid-margin uk-grid uk-grid-stack" uk-grid>
              <div class="uk-width-1-1@m">
                <div
                  class="uk-margin uk-width-large uk-margin-auto uk-card uk-card-default uk-card-body uk-box-shadow-large"
                >
                  <ul
                    class="uk-tab uk-flex-center"
                    uk-grid
                    uk-switcher="animation: uk-animation-fade"
                  >
                    <li class="uk-hidden">Forgot Password?</li>
                  </ul>
                  <ul class="uk-switcher">
                    <li>
                      <h3 class="uk-card-title uk-text-center">
                        Create an advert
                      </h3>
                      <h4 class="uk-text-center">
                        Please fill in the following details
                      </h4>

                      <!--ABS FORM SECTION-->
                      <form class="uk-form-stacked uk-margin">
                        <div class="card-info uk-margin">
                          <label
                            class="uk-form-label uk-text-bold"
                            for="form-stacked-text"
                            >Ad Title
                          </label>
                          <div class="uk-form-controls">
                            <input
                              id="ads-title"
                              class="uk-input"
                              class="form-stacked-text"
                              type="text"
                              placeholder="enter Title..."
                            />
                          </div>
                        </div>

                        <!-- form title section  -->
                        <div class="card-info uk-margin">
                          <label
                            class="uk-form-label uk-text-bold"
                            for="form-stacked-text"
                            >Ad Description
                          </label>
                          <div class="uk-form-controls">
                            <input
                              id="ads-description"
                              class="uk-input"
                              id="form-stacked-text"
                              type="text"
                              placeholder="enter Description..."
                            />
                          </div>

                          <!-- form subject section  -->
                          <div class="uk-margin">
                            <label
                              class="uk-form-label uk-text-bold"
                              for="form-horizontal-select"
                              >Subject</label
                            >
                            <div class="uk-form-controls">
                              <select
                                id="ads-subject"
                                class="uk-select"
                                uk-form-custom="target: true"
                                id="form-horizontal-select"
                              >
                                <option id="subject-choices">select</option>
                              </select>
                            </div>
                          </div>

                          <!-- budget section  -->
                          <div class="uk-margin">
                            <label
                              class="uk-form-label uk-text-bold"
                              for="form-horizontal-select"
                              >Budget</label
                            >
                            <div class="uk-form-controls">
                              <select
                                id="ads-budget"
                                class="uk-select"
                                class="form-horizontal-select"
                              >
                                <option id="budget-low">Low</option>
                                <option id="budget-medium">Medium</option>
                                <option id="budget-high">High</option>
                              </select>
                            </div>
                          </div>

                          <!-- TUTOR PRICE SELECTIONS -->
                          <div class="uk-margin">
                            <label
                              class="uk-form-label uk-text-bold"
                              for="form-horizontal-select"
                              >Price</label
                            >
                            <div class="uk-form-controls">
                              <select
                                id="ads-price"
                                class="uk-select"
                                class="form-horizontal-select"
                              >
                                <option id="price-low">£10</option>
                                <option id="price-medium">£25</option>
                                <option id="price-low">£50</option>
                              </select>
                            </div>
                          </div>
                        </div>
                        <!-- button section  -->
                        <div class="uk-card-body">
                          <button
                            id="ads-btn"
                            class="uk-button uk-button-primary uk-width-1-1 uk-margin-small-bottom"
                            type="submit"
                          >
                            Button
                          </button>
                        </div>
                      </form>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>