{{> privateNavBar }}

<main>
  <div class="uk-section uk-section-muted uk-flex uk-flex-middle uk-animation-fade" uk-height-viewport>
    <div class="uk-width-1-1">
      <div class="uk-container">
        <div class="uk-grid-margin uk-grid uk-grid-stack" uk-grid>
          <div class="uk-width-1-1@m">
            <div class="uk-margin uk-width-large uk-margin-auto uk-card uk-card-default uk-card-body uk-box-shadow-large">
              <ul class="uk-subnav uk-subnav-pill" style="display: none" uk-switcher>
                <li><a href="#">Page1</a></li>
                <li><a href="#">Page2</a></li>
                <li><a href="#">Page3</a></li>
                <li><a href="#">Page4</a></li>
              </ul>
              <ul class="uk-switcher uk-margin">
                <li>
                    <div>
                        <progress class="uk-progress" value="5" max="100"></progress>
                    </div>
                  <h3 class="uk-card-title uk-text-center">Choose your preferred subject and level</h3>
                  <form id="profile1">
                    <div class="uk-margin">
                        <select id="subjectChoice" class="uk-select">
                            {{#each subjects}}
                            <option value={{id}}>{{subjectName}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="uk-margin">
                        <select id="levelChoice" class="uk-select">
                            <option>Beginner</option>
                            <option>Intermediate</option>
                            <option>Advance</option>
                        </select>
                    </div>
                    <div class="uk-margin">
                      <button type="submit" class="uk-button uk-button-primary uk-button-large uk-width-1-1" uk-switcher-item="1">Next</button>
                    </div>
                  </form>
                </li>
                <li>
                    <div>
                        <progress class="uk-progress" value="25" max="100"></progress>
                    </div>
                  <h3 class="uk-card-title uk-text-center">Please enter your location</h3>
                  <form id="profile2">
                    <div class="uk-margin">
                      <div class="uk-inline uk-width-1-1">
                        <span class="uk-form-icon" uk-icon="icon: location"></span>
                        <input class="uk-input uk-form-large" type="text" id="locationInput" placeholder="Location">
                      </div>
                    </div>
                    <div class="uk-margin uk-grid-small uk-child-width-auto uk-grid">
                        <label><input class="uk-checkbox" type="checkbox" id="isRemote"> Remote Sessions?</label>
                    </div>

                    <div class="uk-margin">
                      <button type="submit" class="uk-button uk-button-primary uk-button-large uk-width-1-1" uk-switcher-item="2">Next</button>
                    </div>
                  </form>
                </li>
                  {{> tutorCompleteProfile }}
                  {{> studentCompleteProfile }}
                  </form>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>